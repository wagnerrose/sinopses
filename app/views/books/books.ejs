<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<%- include('../partials/head') %>
			<style>
			</style>  
		</head>
	<body>
		<header>
				<%- include('../partials/header') %>
		</header>
		<main>
			<div class="container-fluid">
				<h1 class="centro" >Relação de Livros</h1>
				<div class="jumbotron">
					<div class="row">
						<div class="col col-sm-2"></div>
						<div class="col col-sm-8">
							<table class="table table-dark">
								<tr>
									<td>ID</td>
									<td>Título</td>
									<td>Autor</td>
									<td>Editora</td>
									<td>Sinopse</td>
								</tr>
								<% for( let i = 0; i < books.length; i++ ) { %>
									<tr>
										<td><%= books[i].id %> </td>
										<td><%= books[i].title %> </td>
										<td><%= books[i].author %> </td>
										<td><%= books[i].publisher %> </td>
										<td><%= books[i].synopsis %> </td>
									</tr>		     
								<% } %>
							</table>
							<br><br>
							<div class="col">
								<a href="/" class="btn btn-primary btn-sm" tabindex="-1" role="button" aria-disabled="true">Home</a>
								<a href="/form_add_book" class="btn btn-primary btn-sm" tabindex="-1" role="button" aria-disabled="true">Novo Livro</a>
							</div>
						</div>
						<div class="col col-sm-2"></div>
					</div>
				</div>
			</div>
		</main>
		<footer>
			<%- include('../partials/footer') %> 
		</footer>			 
	</body>
</html>