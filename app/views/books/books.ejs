<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<%- include('../partials/head') %>
			<style>
			.button {
				border: none;
				color: black;
				padding: 15px 32px;
				text-align: center;
				text-decoration: none;
				display: inline-block;
				font-size: 16px;
			}
			.home {
				background-color: #4CAF50; /* Green */
				color: white;
			}
			.new {
				background-color: blue;
				color: white;
			}
		</style>  
		</head>
	<body>
		<header>
				<%- include('../partials/header') %>
		</header>
		<main>
			<div class="container-fluid">
				<h1 class="centro" >Relação de Livros</h1>
				<div class="jumbotron">
					<div class="row">
						<div class="col col-sm-2"></div>
						<div class="col col-sm-8">
							<table class="table table-dark">
								<tr>
									<td>ID</td>
									<td>Título</td>
									<td>Autor</td>
									<td>Editora</td>
								</tr>
								<% for( let i = 0; i < books.length; i++ ) { %>
									<tr>
										<td><%= books[i].id %> </td>
										<td><%= books[i].title %> </td>
										<td><%= books[i].authorid %> </td>
										<td><%= books[i].publisherid %> </td>
									</tr>		     
								<% } %>
							</table>
							<br><br>
							<a href="/" class="button home">Home</a>
							<a href="/form_add_book" class="button new">Novo Livro</a>
						</div>
						<div class="col col-sm-2"></div>
					</div>
				</div>
			</div>
		</main>
		<footer>
			<%- include('../partials/footer') %> 
		</footer>			 
	</body>
</html>