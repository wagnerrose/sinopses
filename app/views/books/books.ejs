<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<%- include('../partials/head') %>
		</head>
	<body>
		<header>
				<%- include('../partials/header') %>
		</header>
		<main>
			<div class="container-fluid">
				<h1 class="centro" >Relação de Livros</h1>
				<div class="jumbotron">
					<div class="row">
						<div class="col col-sm-2"></div>
						<div class="col col-sm-8">
							<table class="table table-hover" id="tabela">
								<thead class="thead-dark">
                  <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Autor</th>
                    <th>Editora</th>
                    <th>Sinopse</th>
                    <th>Categoria</th>
                  </tr>
							  </thead>
								<% for( let i = 0; i < books.length; i++ ) { %>
                  <tbody>
                    <tr>
                      <td><%= books[i].id %> </td>
                      <td><%= books[i].title %> </td>
                      <td><%= books[i].author %> </td>
                      <td><%= books[i].publisher %> </td>
                      <td><%= books[i].synopsis %> </td>
                      <td><%= books[i].category %> </td>
									  </tr>
                  </tbody>	     
								<% } %>
							</table>
							<br><br>
							<div class="col">
								<a href="/" class="btn btn-primary btn-sm" tabindex="-1" role="button" aria-disabled="true">Home</a>
								<a href="/form_add_book" class="btn btn-primary btn-sm" tabindex="-1" role="button" aria-disabled="true">Novo Livro</a>
							</div>
						</div>
						<div class="col col-sm-2"></div>
					</div>
				</div>
			</div>
		</main>
		<footer>
			<%- include('../partials/footer') %> 
		</footer>			 
	</body>
</html>