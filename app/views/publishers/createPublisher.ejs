<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<%- include('../partials/head') %>
		</head>
	<body>
		<header>
				<%- include('../partials/header') %>
		</header>
		<main>
			<div class="container-fluid">
				<% if(validator !== undefined) {%>
					<div class="alert alert-danger" role="alert">
						<ul>
							<% for( var i = 0; i < validator.errors.length; ++i) { %> 
								<li>
									<%= validator.errors[i].msg %>
								</li>
							<% } %> 
						</ul>
					</div>
				<% } %> 				
				<h1 class="centro">Cadastro de Editora</h1>
					<div class="row">
						<div class="col col-sm"></div>
						<div class="col col-sm">
							<div class="jumbotron">
								<form action="/editora/novo" class="form-group" method="post">
									<div class="form-group">									
										<label for="fname">Nome:</label>
										<input type="text" class="form-control" id="name" name="name" value="<%= publisher.name%>">
									</div>
									<div class="row" style="margin-top: 20px;">
										<div class="col col-sm-4"></div>
										<div class="col col-sm-4">
											<input class="btn btn-primary btn-sm" type="submit" value="Salva">
											<a href="/editoras/lista" class="btn btn-danger btn-sm" tabindex="-1" role="button" aria-disabled="true">Cancela</a>
										</div>
										<div class="col col-sm-4"></div>
									</div>

								</form>
							</div><!--div jumbotron-->
						</div><!--div row -->
						<div class="col col-sm"></div>
					</div><!--div row -->
			</div>
		</main>
		<footer>
			<%- include('../partials/footer') %> 
		</footer>
	</body>
</html>