<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<%- include('../partials/head') %>
		</head>
	<body>
		<header>
				<%- include('../partials/header') %>
		</header>
		<main>
			<div class="container-fluid">
				<h1 class="centro">Relação de Editoras</h1>
				<div class="jumbotron">
					<div class="row">
						<div class="col col-sm"></div>
						<div class="col col-sm">
							<table class="table table-hover" id="tabela">
                <thead class="thead-dark">
                  <tr>
                    <th>ID</th>
                    <th>Editora</th>
                  </tr>
                </thead>
                <tbody>
                  <% for( let i = 0; i < publishers.length; i++ ) { %>
                    <tr>
                      <td><%= publishers[i].id %> </td>
                      <td><%= publishers[i].name %> </td>
                    </tr>		     
                  <% } %>
                </tbody>
								</table>
								<br><br>
								<div class="col">
									<a href="/" class="btn btn-primary btn-sm" tabindex="-1" role="button" aria-disabled="true">Home</a>
									<a href="/form_add_publisher" class="btn btn-primary btn-sm" tabindex="-1" role="button" aria-disabled="true">Nova Editora</a>
								</div>
						</div>
						<div class="col col-sm"></div>
					</div>
				</div>
			</div>
		</main>		
		<footer>
			<%- include('../partials/footer') %> 
		</footer>
	</body>
</html>